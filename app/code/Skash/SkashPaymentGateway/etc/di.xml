<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="SkashPaymentGatewayFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="commandPool" xsi:type="object">SkashPaymentGatewayCommandPool</argument>
            <argument name="code" xsi:type="const">\Skash\SkashPaymentGateway\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Skash\SkashPaymentGateway\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">SkashPaymentGatewayValueHandlerPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="SkashPaymentGatewayConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Skash\SkashPaymentGateway\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with SkashPaymentGatewayConfig -->
    <virtualType name="SkashPaymentGatewayLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">SkashPaymentGatewayConfig</argument>
        </arguments>
    </virtualType>


    <!-- Commands infrastructure -->
    <!-- https://devdocs.magento.com/guides/v2.0/payments-integrations/payment-gateway/command-pool.html -->
    <virtualType name="SkashPaymentGatewayCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
            <!-- @todo: Check if we need sale instead of  authorize and capture -->
                <!-- <item name="sale" xsi:type="string">SkashPaymentGatewaySaleCommand</item> -->
                <item name="authorize" xsi:type="string">SkashPaymentGatewayAuthorizeCommand</item>
                <item name="capture" xsi:type="string">SkashPaymentGatewayCaptureCommand</item>
            <!-- @todo: add refund -->
                <!-- <item name="refund" xsi:type="string">SkashPaymentGatewayRefundCommand</item> -->
                <item name="void" xsi:type="string">SkashPaymentGatewayVoidCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <!-- https://devdocs.magento.com/guides/v2.0/payments-integrations/payment-gateway/gateway-command.html -->
    <virtualType name="SkashPaymentGatewayAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <!-- A gateway command must be configured with the following arguments: -->
            <!-- requestBuilder: builds an array of provider-specific arguments using the order information. -->
            <argument name="requestBuilder" xsi:type="object">SkashPaymentGatewayAuthorizationRequest</argument>
            <!-- transferFactory: creates transfer object from request data, which will be used by Gateway Client to process requests. -->
            <argument name="transferFactory" xsi:type="object">Skash\SkashPaymentGateway\Gateway\Http\TransferFactory</argument>
            <!-- client: gateway client, takes the provider-specific arguments and performs a low-level call to the provider. -->
            <!-- https://devdocs.magento.com/guides/v2.0/payments-integrations/payment-gateway/gateway-client.html -->
        <!-- @todo: replace the client mock with the client calls -->
            <argument name="client" xsi:type="object">Skash\SkashPaymentGateway\Gateway\Http\Client\ClientMock</argument>
            <!-- Optional arguments :
            handler: response handler, changes the order and payment status depending on the payment provider response.
            validator: response validator, validates the provider response. -->
            <argument name="handler" xsi:type="object">SkashPaymentGatewayResponseHandlerComposite</argument>
            <!-- <argument name="handler" xsi:type="object">BraintreeAuthorizationHandler</argument> -->
        <!-- @todo: add response validatior? maybe not. already added in capture and void as ResponseCodeValidator-->
        <!-- https://devdocs.magento.com/guides/v2.0/payments-integrations/payment-gateway/response-validator.html -->
            <!-- <argument name="validator" xsi:type="object">Skash\SkashPaymentGateway\Gateway\Validator\ResponseValidator</argument> -->
        </arguments>
    </virtualType>


    <type name="Skash\SkashPaymentGateway\Gateway\Http\Client\ClientMock">
        <arguments>
            <argument name="logger" xsi:type="object">SkashPaymentGatewayLogger</argument>
        </arguments>
    </type>

    <!-- Authorization Request -->
    <!-- Check https://devdocs.magento.com/guides/v2.0/payments-integrations/payment-gateway/request-builder.html -->
    <virtualType name="SkashPaymentGatewayAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Skash\SkashPaymentGateway\Gateway\Request\AuthorizationRequest</item>
            <!-- @todo: Check what needs to be done here. What to replace MockData with -->
                <item name="mockData" xsi:type="string">Skash\SkashPaymentGateway\Gateway\Request\MockDataRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Skash\SkashPaymentGateway\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">SkashPaymentGatewayConfig</argument>
        </arguments>
    </type>

    <!-- Capture command -->
    <virtualType name="SkashPaymentGatewayCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Skash\SkashPaymentGateway\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">Skash\SkashPaymentGateway\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Skash\SkashPaymentGateway\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Skash\SkashPaymentGateway\Gateway\Validator\ResponseCodeValidator</argument>
        <!-- @todo: replace the client mock with the client calls -->
            <argument name="client" xsi:type="object">Skash\SkashPaymentGateway\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Capture Request -->
    <type name="Skash\SkashPaymentGateway\Gateway\Request\CaptureRequest">
        <arguments>
            <argument name="config" xsi:type="object">SkashPaymentGatewayConfig</argument>
        </arguments>
    </type>

    <!-- Void command -->
    <virtualType name="SkashPaymentGatewayVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Skash\SkashPaymentGateway\Gateway\Request\VoidRequest</argument>
            <argument name="handler" xsi:type="object">Skash\SkashPaymentGateway\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Skash\SkashPaymentGateway\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Skash\SkashPaymentGateway\Gateway\Validator\ResponseCodeValidator</argument>
        <!-- @todo: replace the client mock with the client calls -->
            <argument name="client" xsi:type="object">Skash\SkashPaymentGateway\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Void Request -->
    <type name="Skash\SkashPaymentGateway\Gateway\Request\VoidRequest">
        <arguments>
            <argument name="config" xsi:type="object">SkashPaymentGatewayConfig</argument>
        </arguments>
    </type>

    <!-- Response handlers -->
    <virtualType name="SkashPaymentGatewayResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="txnid" xsi:type="string">Skash\SkashPaymentGateway\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">Skash\SkashPaymentGateway\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="SkashPaymentGatewayValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">SkashPaymentGatewayConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="SkashPaymentGatewayConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">SkashPaymentGatewayConfig</argument>
        </arguments>
    </virtualType>

    <type name="Skash\SkashPaymentGateway\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">SkashPaymentGatewayConfig</argument>
        </arguments>
    </type>

</config>
